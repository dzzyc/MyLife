<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:layout_editor_absoluteY="81dp">


    <TextView
        android:id="@+id/daily_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="103dp"
        android:layout_marginRight="103dp"
        android:layout_marginTop="33dp"
        android:text="Daily"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/daliy_edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/daliy_edit"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginEnd="215dp"
        android:layout_marginRight="215dp"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/daily_target"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/long_target"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="187dp"
        android:layout_marginEnd="101dp"
        android:layout_marginRight="101dp"
        android:text="Long"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/daliy_edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/long_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toStartOf="@+id/long_target"/>
</LinearLayout>

